{
    "name": "dhii/functions",
    "description": "Utilities for working with functions",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Dhii\\Functions\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dhii\\Functions\\UnitTest\\": ["test/unit"],
            "Dhii\\Functions\\FuncTest\\": ["test/func"]
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
